<script>
  
    $(document).ready(function () {
        var currentPath = window.location.pathname.toString();
        $(".c-navleft_category-link").each(function (item) {
            $(this).removeClass("is-active");
            var _link = $(this).attr('meta-data');
            if(currentPath.indexOf(_link) > -1)
            {
                // nếu trùng link thì set là active
                $(this).addClass("is-active");
            }
            if ((currentPath == "/vi-vn/" || currentPath == "/en-gb/") && _link == "/home")
            {
                // nếu là trang home thì set là active
                $(this).addClass("is-active");
            }
        });
 
    });

  
    function funcRedirect(_url)
    {
        try {
            location.href = _url;
        } catch (e) {
            alert(e.toString());
            location.href = _url;
        }

    }
</script>
