    function ShowHiden_SoHinhSoTrang() {
        try {
            if ($("#3_rdDonSangChe").is(':checked') || $("#3_rdKieuDangCongNghiep ").is(':checked')) {
                $("#divSoHinhSoTrang").removeClass("clssDisplaynone");
