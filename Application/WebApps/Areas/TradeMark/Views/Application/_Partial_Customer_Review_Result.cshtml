</script>

<div>
    <div class="divCover cls_form_title">
        <img src="~/Content/icons/info.png" />
        <div class="cls_form_header">
            Khách hàng review
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Ghi chú <i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txtNotes" maxlength="2000" />
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-content">
            <input type="button" id="btnChooseFile" value="Chọn file" class="btn" onclick="return Click_Upload_File()" style="margin-left:4px;height:29px;" />
            <input type="file" id="file_attach" style="display:none" onchange="FuncChooseResultFile()" />

            <div class="div-checkbox clssDisplaynone" id="div_RemoveImg">
                <img onclick="RemoveFile()" src="~/Content/icons/delete_file.png" style="margin: 10px 5px 0px 5px" />
            </div>
        </div>
        <div class="div-search-title">
            <div id="div_filename" style="width: 168px;">Atachment<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" placeholder="Tên file Maximum file size is 2MB" id="txtMaxFile" readonly="readonly" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-group-bottom">
            <input type="submit" class="btn-default" value="Send" onclick="return do_Customer_Review('@_AppHeaderInfo.Case_Code')" />
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

    });

    function do_Customer_Review(_case_code) {
        if (validateAction()) {
            nvsConfirm(null, "Bạn có chắc chắn muốn nộp đơn này cho khách hàng không?", function () {

                var formdata = new FormData();
                formdata.append("pInfo.Case_Code", _case_code);
                formdata.append("pInfo.Id", @_AppHeaderInfo.Id);
                formdata.append("pInfo.Note", $('#txtNotes').val());

                if (pfile.val() != "") {
                    var pfile = $("#file_attach");//lay du lieu file
                    var _file = pfile[0].files[0];
                    formdata.append("pInfo.File_Atachment", _file);
                }

                $.ajax({
                    url: '/trade-mark-mana/quan-ly-don/do-customer-review',
                    type: 'POST',
                    data: formdata,
                    enctype: 'multipart/form-data',
                    async: true, cache: false, traditional: true, contentType: false,
                    processData: false,
                    beforeSend: function () {
                        CreateRollingWaitingIcon(true);
                    },
                    success: function (data) {
                        CreateRollingWaitingIcon(false);
                        if (data.success == "-1") {
                            jError("Lỗi check lại kết nối tới server");
                            return false;
                        }
                        else {
                            jAlert('Nộp đơn thành công!', "THÔNG BÁO", function () {
                                window.location.href = "/home";
                            });
                        }
                    },
                    error: function (e) {
                        CreateRollingWaitingIcon(false);
                        console.log(e);
                    }
                });
            });
        }
    }

    function Click_Upload_File(p_AfterID) {
        var _idfile = "file_attach";
        document.getElementById(_idfile).click();
    }

    function FuncChooseResultFile() {
        try {

            var _textFile = $("#txtMaxFile");
            var _txt = document.getElementById("txtMaxFile");
            var div_filename = document.getElementById("div_filename");

            // lay du lieu file
            var pfile = $("#file_attach");

            if (pfile.val() == "") {
                _textFile.val("");

                $("#div_RemoveImg").addClass("clssDisplaynone");
                div_filename.width = "168px";
                //_txt.style.width = "561px";
            }
            else {
                var _Filename = pfile[0].files[0].name.toString();
                _textFile.val(_Filename);

                $("#div_RemoveImg").removeClass("clssDisplaynone");
                div_filename.width = "143px";
                //_txt.style.width = "536px";
            }
        } catch (e) {
            alert(e);
        }
    }


    function RemoveFile(p_AfterID) {
        try {

            $("#file_attach").val('');
            $("#div_RemoveImg").addClass("clssDisplaynone");
            var _textFile = $("#txtMaxFile");
            _textFile.val("");

        } catch (e) {
            alert(e.toString());
        }
    }

    function validateAction() {
        // check validate ngày
        var _filing_date = $("#txt_filing_date").val();
        if (checkDate("Ngày nộp đơn", "#txt_filing_date", _filing_date) == false) {
            return false;
        }

        var _App_No = $("#txt_App_No").val();
        if (_App_No == null || _App_No == "") {
            jError("Số đơn không được để trống", "Lỗi", function () {
                $("#txt_App_No").focus();
            });
            return false;
        }

        var pfile = $("#file_attach");//lay du lieu file
        if (pfile.val() != "") {
            var _CheckFile = true;
            var _Len = pfile[0].files[0].name.toString()
            if (_Len.length > 200) {
                _CheckFile = false;
                jError("Tên file không được quá 200 ký tự", "Lỗi", function () {
                    $(pfile).focus();

                });
                return false;
            }

            var _file = pfile[0].files[0];
            var _size = _file.size / 1024 / 1024;

            if (validateFileName(_file.name) == false) {
                _CheckFile = false;
                jError("Không tải file có tên file được lưu là unicode Tiếng việt có dấu ! ", "Lỗi", function () {
                    $(pfile).focus();
                });
                return false;
            }
            if (_CheckFile == false) {
                return false;
            }
        }

        return true;
    }

</script>
