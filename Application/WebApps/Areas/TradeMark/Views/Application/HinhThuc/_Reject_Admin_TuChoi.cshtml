@using ObjectInfos;
@using BussinessFacade.ModuleMemoryData
@{
    var _AppHeaderInfo = new ApplicationHeaderInfo();
    if (ViewBag.objAppHeaderInfo != null)
    {
        _AppHeaderInfo = (ApplicationHeaderInfo)ViewBag.objAppHeaderInfo;
    }

    App_Notice_Info _App_Notice_Info = new App_Notice_Info();
    _App_Notice_Info.Times = 0;
    if (ViewBag.App_Notice_Info != null)
    {
        _App_Notice_Info = (App_Notice_Info)ViewBag.App_Notice_Info;
    }


    string _str_number = "";
    if (_App_Notice_Info.Times > 0)
    {
        _str_number = "lần" + _App_Notice_Info.Times.ToString();
    }
}

<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    .div-search-title > div {
        width: 250px;
    }
</style>
<script src="~/Content/Datetimepicker_master/jquery.datetimepicker.full.min.js"></script>
<link href="~/Content/Datetimepicker_master/jquery.datetimepicker.min.css" rel="stylesheet" />
<script>
    $.datetimepicker.setLocale('vi');
    $(document).ready(function () {
        $('.datepicker').datetimepicker({
            format: 'd/m/Y',
            formatDate: 'd/m/Y',
            timepicker: false,
            mask: '39/19/9999',
            validateOnBlur: true,
        });
    });
</script>

<div>
    <div class="divCover cls_form_title">
        <img src="~/Content/icons/info.png" />
        <div class="cls_form_header">
            Admin reject notice form
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div id="divNumberNotice">Số thông báo @_str_number<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" maxlength="100" placeholder="Số thông báo" id="txt_Notice_Number" style="width:200px" value="@_App_Notice_Info.Notice_Number"/>
            </div>
        </div>

        <div class="div-search-title">
            <div>Ngày thông báo <i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" placeholder="Ngày thông báo" id="txt_notice_date" maxlength="100" class="datepicker" value="@_App_Notice_Info.Notice_Date.ToString("dd/MM/yyyy")"/>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Ngày hợp lệ</div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" placeholder="Ngày hợp lệ" id="txt_accept_date" maxlength="100" class="datepicker" value =@(_App_Notice_Info.Accept_Date == DateTime.MinValue ? "" : _App_Notice_Info.Accept_Date.ToString("dd/MM/yyyy")) />
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Nội dung từ chối </div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txt_Reject_Reason" maxlength="2000" value="@_App_Notice_Info.Reject_Reason"/>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Advise trả lời </div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txt_advise_replies" maxlength="2000" value="@_App_Notice_Info.Advise_Replies"/>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Billing Request<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <a style="height: 20px !important;" href="javascript:;" onclick="getView2Insert('@_AppHeaderInfo.Case_Code')"> Yes </a>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Ghi chú <i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txtNotes" maxlength="2000" />
            </div>
        </div>
    </div>

    @{
        string _id1 = "1";
        string _isValid1 = "1";
        string _model1 = _id1 + "|" + _isValid1 + "|" + "File scan thông báo";
        @Html.Partial("~/Areas/TradeMark/Views/Application/_Partial_UploadFile.cshtml", _model1)
    }

    @{
        string _id2 = "2";
        string _isValid2 = "0"; ;
        string _model2 = _id2 + "|" + _isValid2 + "|" + "File dịch";
        @Html.Partial("~/Areas/TradeMark/Views/Application/_Partial_UploadFile.cshtml", _model2)
    }

    <div class="form-group">
        <div class="form-group-bottom">
            <input type="submit" class="btn-default" value="Luật sư xác nhận" onclick="return do_Filing('@_AppHeaderInfo.Case_Code')" />
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

    });

    function getView2Insert(_case_code) {
        if (CheckSessionTimeOut() == false) {
            return false;
        }

        var url = "/quan-ly-billing/danh-sach-billing/show-insert-by-casecode?p_case_code=" + _case_code + "&p_type=" + @(Convert.ToDecimal(Common.CommonData.CommonEnums.Billing_Insert_Type.Accept_Form));
        window.open(url);
    }

    function do_Filing(_case_code) {
        if (validateAction()) {
            nvsConfirm(null, "Bạn có chắc chắn cập nhật thông tin thông báo hình thức hay không không?", function () {



                var formdata = new FormData();
                formdata.append("pInfo.Case_Code", _case_code);
                formdata.append("pInfo.Notice_Number", $('#txt_Notice_Number').val());
                formdata.append("pInfo.Notice_Date", $('#txt_notice_date').val());
                formdata.append("pInfo.Accept_Date", $('#txt_accept_date').val());

                formdata.append("pInfo.Reject_Reason", $('#txt_Reject_Reason').val());
                formdata.append("pInfo.Advise_Replies", $('#txt_advise_replies').val());
                formdata.append("pInfo.Note", $('#txtNotes').val());

                var pfile = $("#file_attach_1");//lay du lieu file
                if (pfile.val() != "") {
                    var _file = pfile[0].files[0];
                    formdata.append("pInfo.File_Notice_Url", _file);
                }

                var pfile2 = $("#file_attach_1");//lay du lieu file
                if (pfile2.val() != "") {
                    var _file2 = pfile2[0].files[0];
                    formdata.append("pInfo.Notice_Trans_Url", _file2);
                }

                $.ajax({
                    url: '/trade-mark-mana/quan-ly-don/lawer-notice-form',
                    type: 'POST',
                    data: formdata,
                    enctype: 'multipart/form-data',
                    async: true, cache: false, traditional: true, contentType: false,
                    processData: false,
                    beforeSend: function () {
                        CreateRollingWaitingIcon(true);
                    },
                    success: function (data) {
                        CreateRollingWaitingIcon(false);
                        if (data.success == "-1") {
                            jError("Lỗi check lại kết nối tới server");
                            return false;
                        }
                        else {
                            jAlert('Submit thành công!', "THÔNG BÁO", function () {
                                window.location.href = "/home";
                            });
                        }
                    },
                    error: function (e) {
                        CreateRollingWaitingIcon(false);
                        console.log(e);
                    }
                });
            });
        }
    }

    function validateAction() {
        var txt_Notice_Number = $("#txt_Notice_Number").val();
        if (txt_Notice_Number == null || txt_Notice_Number == "") {
            jError("Số thông báo không được để trống", "Lỗi", function () {
                $("#txt_Notice_Number").focus();
            });
            return false;
        }

        // check validate ngày
        var txt_notice_date = $("#txt_notice_date").val();
        if (checkDate("Ngày thông báo", "#txt_notice_date", txt_notice_date) == false) {
            return false;
        }

        // check validate ngày
        var txt_accept_date = $("#txt_accept_date").val();
        if (txt_accept_date != "" && txt_accept_date != "__/__/____") {
            if (checkDate("Ngày hợp lệ", "#txt_accept_date", txt_accept_date) == false) {
                return false;
            }
        }

        var _Note = $('#txtNotes').val();
        if (_Note == null || _Note == "") {
            jError('Ghi chú không được để trống!', "Lỗi", function () {
                $('#txtNotes').focus();
            });
            return false;
        }

        var _re = checkValidate_File("1");
        if (_re == false) {
            return false;
        }

        var _re = checkValidate_File("2");
        if (_re == false) {
            return false;
        }

        return true;
    }

</script>
