</style>
<div class="div_full_100_area" id="divContainerDocOther"  style="@styleTLK">
    @Html.Partial("~/Areas/TradeMark/Views/Shared/_PartialTitle.cshtml", "CÁC TÀI LIỆU KHÁC")
    @{
        if (lstDocOther.Count > 0)
        {
            int No = 0;
            string FileName = "";

            <div>
