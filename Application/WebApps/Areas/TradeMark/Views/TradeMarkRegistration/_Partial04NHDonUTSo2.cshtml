@using WebApps.CommonFunction
@using BussinessFacade.ModuleMemoryData

<div class="div_full_100_area">
    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Số đơn:</div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" placeholder="Số đơn" class="classDacTinhUT" maxlength="50" id="6_txtSoDon2" />
            </div>
        </div>
    </div>
    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Ngày nộp đơn:</div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" placeholder="Ngày nộp đơn" class="classDacTinhUT datetimepicker" style="width:200px" maxlength="10" id="6_txtNgayNopDon2" />
            </div>
        </div>
    </div>
    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Nước nộp đơn:</div>
        </div>
        <div class="div-search-content">
            <div>
                <select id="6_txtNuocNopDon2" class="classDacTinhUT">
                    @foreach (var item in MemoryData.c_lst_Country)
                    {
                        <option value="@item.Country_Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-content">
            <div class="div-radio">
                <input type="radio" name="4_YCHuongQuyen2" class="classDacTinhUT" value="NTVN" placeholder="4_ckbNopTaiVietNam" id="4_ckbNopTaiVietNam2" />
                <label>Theo đơn (các đơn) đầu tiên nộp tại Việt Nam</label>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-content">
            <div class="div-radio">
                <input type="radio" name="4_YCHuongQuyen2" class="classDacTinhUT" value="CUPR" placeholder="4_ckbNopTaiParis" id="4_ckbNopTaiParis2" />
                <label>Theo đơn (các đơn) nộp theo Công ước Paris</label>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-content">
            <div class="div-radio">
                <input type="radio" name="4_YCHuongQuyen2" class="classDacTinhUT" value="TTTK" placeholder="4_ckbThoaThuanKhac" id="4_ckbThoaThuanKhac2" />
                <label>Theo thoả thuận khác</label>
            </div>
        </div>
    </div>


    @* TÀI LIEU ƯU TIEN *@
    <div class="div-search-ad" style="display:inline-flex;">
        <div class="div-search-content">
            <div class="div-checkbox" style="width:422px">
                <input type="checkbox" class="classDacTinhUT" maxlength="3" value="04NH_D_14_2" id="6_rdoTLCMQUT_2" name="6_rdoTLCMQUT_2"  onchange="return ShowHidenUpLoad(this.id, this.id);" />
                <label>Tài liệu chứng minh quyền ưu tiên</label>
            </div>
        </div>
        <div class="div-search-content">
            <input type="text" id="6_txtTLCMQUT_2" disabled="disabled"  maxlength="3" placeholder="Số bản" />
        </div>
        <div class="div-search-title" style="width:412px">
            <div>bản</div>
        </div>
    </div>
    <div class="div-search-ad" style="display:inline-flex;    margin-left: 40px;">
        <div class="div-search-content">
            <div class="div-checkbox" style="width:185px">
                <input type="checkbox" maxlength="3" class="classDacTinhUT" value="04NH_D_15_2" id="6_rdoBSDDT_2" name="6_rdoBSDDT_2" onchange="return ShowHidenUpLoad(this.id, this.id);" />
                <label>Bản sao đơn đầu tiên, gồm</label>
            </div>
        </div>
        <div class="div-search-content">
            <input type="text" id="6_txtBSDDT_2"  disabled="disabled" maxlength="3" placeholder="Số bản" />
        </div>
        <div class="div-search-title" style="width:493px">
            <div>bản</div>
        </div>
    </div>
    <div style="margin-left:40px">
        @Html.Partial("~/Areas/TradeMark/Views/TradeMarkRegistration/_PartialTaiLieuTrongDon.cshtml", "6_rdoBSDDT_2")
    </div>
    <div class="div-search-ad" style="display:inline-flex;   margin-left: 40px;">
        <div class="div-search-content">
            <div class="div-checkbox">
                <input type="checkbox" class="classDacTinhUT" maxlength="3" value="04NH_D_16_2" id="6_rdoBDTVGom_2" name="6_rdoBDTVGom_2" onchange="return ShowHidenUpLoad(this.id, this.id);" />
                <label>Bản dịch tiếng Việt, gồm</label>
            </div>
        </div>
        <div class="div-search-content">
            <input type="text" id="6_txtBDTVGom_2"  disabled="disabled" maxlength="3" placeholder="Số bản" />
        </div>
        <div class="div-search-title" style="width:510px">
            <div>bản</div>
        </div>
    </div>
    <div style="margin-left:40px">
        @Html.Partial("~/Areas/TradeMark/Views/TradeMarkRegistration/_PartialTaiLieuTrongDon.cshtml", "6_rdoBDTVGom_2")
    </div>
    <div class="div-search-ad" style="display:inline-flex;   margin-left: 40px;">
        <div class="div-search-content">
            <div class="div-checkbox" style="width:382px">
                <input type="checkbox" maxlength="3" value="04NH_D_17_2" class="classDacTinhUT" id="6_rdoGiayChuyenNhungUT_2" onchange="return ShowHidenUpLoad(this.id, this.id);" />
                <label> Giấy chuyển nhượng quyền ưu tiên </label>
            </div>
        </div>
    </div>
    <div style="margin-left:40px">
        @Html.Partial("~/Areas/TradeMark/Views/TradeMarkRegistration/_PartialTaiLieuTrongDon.cshtml", "6_rdoGiayChuyenNhungUT_2")
    </div>

</div>


<script>
    $("input[name='6_rdoTLCMQUT_2'").change(function () {
        funcAddRemoveDisabled("6_rdoTLCMQUT_2", "6_txtTLCMQUT_2");
    });

    $("input[name='6_rdoBSDDT_2'").change(function () {
        funcAddRemoveDisabled("6_rdoBSDDT_2", "6_txtBSDDT_2");
    });

    $("input[name='6_rdoBDTVGom_2'").change(function () {
        funcAddRemoveDisabled("6_rdoBDTVGom_2", "6_txtBDTVGom_2");
    });
</script>