</style>
<div class="div_full_100_area" id="divTreeContainerDocOther" style="@styleTLK">
    @Html.Partial("~/Areas/TradeMark/Views/Shared/_PartialTitle.cshtml", "Bộ hình ảnh")
    @{
        if (lstDocOther.Count > 0)
        {
