<script>
    function ShowHiden_Type(type) {
        try{
            if(type == '1'){
                if ($("#type_detail_1").is(':checked')) {
                    $("._detail").addClass("clssDisplaynone");
                    $("#Type_1").removeClass("clssDisplaynone");
                    $("#txt_PCT_SoDon").focus();
                }
                else {
                    $("#Type_1").addClass("clssDisplaynone");
                }
            } else if (type == '2') {
                if ($("#type_detail_2").is(':checked')) {
                    $("._detail").addClass("clssDisplaynone");
                    $("#Type_2").removeClass("clssDisplaynone");
                    $("#txt_PCT_SoDon").focus();
                }
                else {
                    $("#Type_2").addClass("clssDisplaynone");
                }
            } else if (type == '3') {
                if ($("#type_detail_3").is(':checked')) {
                    $("._detail").addClass("clssDisplaynone");
                    $("#Type_3").removeClass("clssDisplaynone");
                    $("#txt_PCT_SoDon").focus();
                }
                else {
                    $("#Type_3").addClass("clssDisplaynone");
                }
            } else if (type == '4') {
                if ($("#type_detail_4").is(':checked')) {
                    $("._detail").addClass("clssDisplaynone");
                    $("#Type_4").removeClass("clssDisplaynone");
                    $("#txt_PCT_SoDon").focus();
                }
                else {
                    $("#Type_4").addClass("clssDisplaynone");
                }
            }
        } catch (ex) {
            console.log(ex)
        }
    }
</script>