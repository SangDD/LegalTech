                    formData.append("pFeeFixInfo[1].Number_Of_Patent", 0);
                    formData.append("pFeeFixInfo[1].Amount", 0);
                }
            }
        } catch (e) {
            console.log(e);
            showError('@Resource.TM3B_InternetError');
            return false;
        }
