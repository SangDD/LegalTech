@model string
@{
    string[] arr = Model.Split(';');

    // định nghĩa id
    string _ID = arr[0];
    string[] arr_id = _ID.Split('|');

    string Document_Id = arr_id[0];
    string divCheckbox = "divCheckbox_" + Document_Id;

    string _Id = arr_id[1];
    string Id_Checkbox = "ckb_" + _Id;
    string LevelTextbox = arr_id[2];

    string Lable = arr_id[3];

    string Lable2 = arr_id[4];
    string Id_textbox = "txt_" + _Id;


    // giá trị tài liệu
    string _Value = arr[1];
    string[] arr_value = _Value.Split('|');
    string Isuse = arr_value[0];
    string Char01 = arr_value[1];
    string Url = arr_value[2];
}

<div class="div-search-ad">
    <div class="div-search-content">
        <div class="div-checkbox" id="@divCheckbox" style="width:382px">
            @if (LevelTextbox == "1")
            {
                @Html.Raw("&emsp;&emsp;&emsp;")
            }
            else if (LevelTextbox == "2")
            {
                @Html.Raw("&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;")
            }

            @if (Isuse == "1")
            {
                <input type="checkbox" name="@Id_Checkbox" id="@Id_Checkbox" value="@Document_Id" disabled="disabled" checked="checked">
            }
            else
            {
                <input type="checkbox" name="@Id_Checkbox" id="@Id_Checkbox" value="@Document_Id" disabled="disabled">
            }
            <label>@Lable</label>
        </div>
    </div>

    @if (Lable2 != "")
    {
        <div class="div-search-title">
            <div>@Lable2:</div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" placeholder="@Lable2" id="@Id_textbox" disabled="disabled" value="@Char01" />
            </div>
        </div>
    }
</div>

@if (Url != "")
{
    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Tên file:</div>
        </div>
        <div class="div-search-content">
            <div>
                @*style="width:329px"*@
                <input type="text" placeholder="Tên file Maximum file size is 2MB" readonly="readonly" value="@Url" />
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function() {
        if ('@Lable2' == "") {
            var _divCheckbox = document.getElementById('@divCheckbox');
            //_divCheckbox.style.width = "850px";
            _divCheckbox.style.width = null;
        }
    });
</script>