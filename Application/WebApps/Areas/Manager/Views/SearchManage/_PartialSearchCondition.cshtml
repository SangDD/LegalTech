@using BussinessFacade.ModuleMemoryData
@using ObjectInfos;
@model string
@{
    decimal _IdSearch = 0;
    decimal _IsFirst = 0;
    if (!string.IsNullOrEmpty(Model))
    {
        _IdSearch = Convert.ToDecimal(Model.Split('|')[0]);
        _IsFirst = Convert.ToDecimal(Model.Split('|')[1]);
    }

    List<AllCodeInfo> _lstObject = WebApps.CommonFunction.AppsCommon.AllCode_GetBy_CdTypeCdName("SEARCH_OBJECT", "OBJECT");
    List<AllCodeInfo> _ListSearchType = WebApps.CommonFunction.AppsCommon.AllCode_GetBy_CdTypeCdName("SEARCH_OBJECT", "SEARCHTYPE");
}
<div id='@("div_condition_" + _IdSearch)' class="div-search-ad">

    @if (_IsFirst == 1)
    {
        <div class="div-checkbox" style="border: none;">
            <img src="~/Content/icons/condition.png" style="margin: 10px 5px 0px 5px;width: 13px;" />
        </div>
    }
    else
    {
        <div class="div-checkbox" style="border: none;">
            <img onclick="funcdeletecondition('@_IdSearch')" src="~/Content/icons/delete_file.png" style="margin: 10px 5px 0px 5px" />
        </div>
    }


