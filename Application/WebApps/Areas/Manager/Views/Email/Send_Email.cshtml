<script>

    function do_SendEmail() {
        if (validateAction()) {
            nvsConfirm(null, "Bạn có chắc chắn gửi email này hay không? ", function () {

                var formdata = new FormData();
                var pfile = $("#file_attach");//lay du lieu file
                if (pfile.val() != "") {
                    var _file = pfile[0].files[0];
                    formdata.append("pInfo.File_Attach_1", _file);
                }

                var pfile_t = $("#file_attach_Dich");//lay du lieu file
                if (pfile_t.val() != "") {
                    var _file_t = pfile_t[0].files[0];
                    formdata.append("pInfo.File_Attach_2", _file_t);
                }

                formdata.append("pInfo.Subject", $('#txtSubject').val());
                formdata.append("pInfo.EmailTo", $('#txtTo').val());
                formdata.append("pInfo.EmailFrom", $('#txtFrom').val());
                formdata.append("pInfo.EmailCC", $('#txtCC').val());
                formdata.append("pInfo.Content", $('#txtBody').val());
                formdata.append("pInfo.Customer_Name", $('#txtName').val());

                formdata.append("pInfo.Out_Ref", $('#txt_Out_Ref').val());
                formdata.append("pInfo.Your_Ref", $('#txt_Your_Ref').val());

                formdata.append("pInfo.Sign", $('#txt_Sign').val());
                formdata.append("pInfo.Position", $('#txt_Position').val());

                $.ajax({
                    url: '/quan-ly-email/do-send-email',
                    type: 'POST',
                    data: formdata,
                    enctype: 'multipart/form-data',
                    async: true, cache: false, traditional: true, contentType: false,
                    processData: false,
                    beforeSend: function () {
                        CreateRollingWaitingIcon(true);
                    },
                    success: function (data) {
                        CreateRollingWaitingIcon(false);
                        if (data.success == "-1") {
                            jError("@Html.Raw(WebApps.Resources.Resource.LoiCheckLai)");
                            return false;
                        }
                        else {
                            jAlert("Gửi email thành công", "@Html.Raw(WebApps.Resources.Resource.ThongBao)", function () {
                                window.location.href = "/home";
                            });
                        }
                    },
                    error: function (e) {
                        CreateRollingWaitingIcon(true);
                        console.log(e);
                    }
                });
            });
        }
    }

