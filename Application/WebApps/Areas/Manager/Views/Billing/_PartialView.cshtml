            {
                <input type="submit" class="btn-default" value="Kết xuất" onclick="return onExport('@Model.Case_Code',2)" />
            }
            else
            {
                <input type="submit" class="btn-default" value="Kết xuất" onclick="return onExport('@Model.Case_Code',1)" />
            }

            <input type="submit" class="btn-default" value="Edit" onclick="return getView2Edit(@Model.Billing_Id,'@Model.App_Case_Code')" />
            <input type="submit" class="btn-default" value="Exit" onclick="return onBack()" />
        </div>
    </div>

</div>

<script>

    $(document).ready(function () {
        $("txtApp_Case_Code").focus();
    });

    function getView2Edit(_id, _app_case_code) {
        if (CheckSessionTimeOut() == false) {
            return false;
        }

        $.ajax({
            type: "POST",
            url: "/quan-ly-billing/danh-sach-billing/show-edit/",
            dataType: "html",
            data: {
                p_id: _id,
                p_app_case_code: _app_case_code
            },
            async: false, cache: false, traditional: true,
            success: function (data) {
                if (data != null) {
                    $("#divPopUpBilling").html(data);
                    ShowPopupDialog_Ipace('divWrapperPopUpBilling', "Sửa thông tin billing", 750, 800, "txtApp_Case_Code");
                }
                return false;
            }
        });
    }

    function onBack() {
        try {

            if (CheckSessionTimeOut() == false) {
                return false;
            }

            var url = "/quan-ly-billing/danh-sach-billing/";
            window.location.href = url;
        } catch (e) {
            CreateRollingWaitingIcon(true);
            alert(e);
        }
    }

    function onExport(_Case_Code, _type) {
        try {

            if (CheckSessionTimeOut() == false) {
                return false;
            }

            var _url = "/quan-ly-billing/danh-sach-billing/do-export-billing";
            if (_type == 2) {
                _url = "/quan-ly-billing-search/danh-sach-billing/do-export-billing";
            }

            nvsConfirm(null, "Bạn có chắc chắn muốn kết xuất billing này không?", function () {
                $.ajax({
                    url: _url,
                    type: "POST",
                    data: {
                        p_case_code: _Case_Code
                    },
                    headers: { "cache-control": "no-cache" },
                    async: true, cache: false, traditional: true,
                    beforeSend: function () {
                        CreateRollingWaitingIcon(true);
                    },
                    success: function (data) {
                        CreateRollingWaitingIcon(false);
                        console.log(data.success);
                        if (data.success == "-1") {
                            jError("Lỗi check lại kết nối tới server");
                            return false;
                        }
                        else {
                            jAlert('Kết xuất billing thành công!', "THÔNG BÁO", function () {
                                OpenPreview("/quan-ly-billing/Pre-View?p_filename=" + data.success);
                            });

                        }
                    },
                    error: function (e) {
                        CreateRollingWaitingIcon(false);
                        console.log(e);
                    }
                });
            });
        } catch (e) {
            CreateRollingWaitingIcon(true);
            alert(e);
        }
    }

    function OpenPreview(url) {
        try {
            w = 1100; //độ rộng form popup
            h = 600;//chiều cao
            var left = (screen.width - w) / 2;
            var top = (screen.height - h) / 4;  // for 25% - devide by 4  |  for 33% - devide by 3
            var targetWin = window.open(url, 'Xem thông tin hóa đơn', 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=' + w + ', height=' + h + ', top=' + top + ', left=' + left);

        } catch (e) {
        }
    }

</script>
