@using BussinessFacade.ModuleMemoryData
@using BussinessFacade.ModuleUsersAndRoles
@using Common.CommonData
@using ObjectInfos;
@{
    ViewBag.Title = "Quản lý hàng hóa dịch vụ";
    Layout = "~/ViewsShared/_Layout.cshtml";

}
@try
{
    <style>
        /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
        .div-search-title > div {
            width: 120px;
        }
    </style>

    <div class="divCover">
        <div class="d-nav">
            <img src="~/Content/icons/Body-icon-home.png" /> I
            Quản trị hệ thống
            <span class="red">></span>
            <a href="/quan-ly-thong-tin/quan-ly-san-pham-dich-vu">Quản lý sản phẩm dịch vụ</a>
        </div>
    </div>
    <div class="divCover">
        <div class="classLine">
        </div>
    </div>

    <div class="d-main">
        <div class="divCover">
            <div class="classTitle">
                <input type="hidden" value="LastTimeUpdated" id="colSorted" />
                <input type="hidden" value="DESC" id="SortType" />
                <input type="hidden" value="" id="OptionSorting" />
                <div class="div-title-content"> THÔNG TIN HÀNG HÓA DỊCH VỤ </div>
            </div>
        </div>

        <div class="divCover" id="div-search-simple">

            <div class="div-search-ad">
                <div class="div-search-title">
                    <div style="width: 120px">Mã hàng hóa</div>
                </div>
                <div>
                    <div>
                        <input style="width: 250px;" type="text" id="txt_code" data-controlcondition="TRUE" />
                    </div>
                </div>
                <div class="div-search-title">
                    <div style="width: 120px">Tên tiếng Việt</div>
                </div>
                <div class="div-search-content">
                    <div>
                        <input type="text" id="txt_name_vi" data-controlcondition="TRUE" />
                    </div>
                </div>
            </div>

            <div class="div-search-ad">
                <div class="div-search-title">
                    <div style="width: 120px">Tên tiếng Anh </div>
                </div>
                <div class="div-search-content">
                    <div>
                        <input type="text" id="txt_name_en" data-controlcondition="TRUE" />
                    </div>
                </div>
            </div>
        </div>

        <div class="divCover">
            <div class="div-search-btn" style="width:450px;">
                <input type="button" value="Tìm kiếm" class="btn-default" onclick="findObjects(1, 1)" />
                <input type="button" value="Thêm hàng hóa" class="btn-default" style="width: 125px;" onclick="getViewToAddNewObject()" />
            </div>
        </div>

        <div class="divCover">
            <div id="divTableObjects">
                @Html.Partial("_PartialAppClassData")
            </div>
        </div>

        <div id="divWrapperViewUser" class="divWrapperPopup" style="display: none;">
            <div class="divPopup" id="divViewUser">
            </div>
        </div>

        <div id="divWrapperEditUser" class="divWrapperPopup" style="display: none;">
            <div class="divPopup" id="divEditUser">
            </div>
        </div>

        <div id="divWrapperAddUser" class="divWrapperPopup" style="display: none;">
            <div class="divPopup" id="divAddUser">
            </div>
        </div>

        <div id="divWrapperPopUpObject" class="divWrapperPopup" style="display: none;">
            <div class="divPopup" id="divPopUpObject">
            </div>
        </div>

    </div>

    <script>
        var _currentKeySearch = '@SessionStorages.SEARCH_CLASS_KEY_CONDITIONS';
        var _currentOptionFilter = '@SessionStorages.SEARCH_CLASS_KEY_OPTIONS';
        var _code = '', _name_vi = '', _name_en = '', _name_vi = '';

        $(document).ready(function () {
            initAllSearchingData(_currentKeySearch, _currentOptionFilter, initOrderBySearching, setKeySearch, findObjects);

            $('txt_code').focus();
            $('[data-controlcondition="TRUE"]').on('keypress',
				function (e) {
				    enterKeyPress(e, 'btnfindObjects');
				});
        });

        function findObjects(_pageNumber, _isSearching) {
            reinitSearchingConditions(_currentKeySearch, _currentOptionFilter, _pageNumber, _isSearching);
            if (isSearching === 1) {
                _code = $("#txt_code").val().trim();
                _name_vi = $("#txt_name_vi").val().trim();
                _name_en = $("#txt_name_en").val().trim();
              
            } else {
                window.arrKeySearch = window.keySearch.split('|');
                _code = arrKeySearch[0];
                _name_vi = arrKeySearch[1];
                _name_en = arrKeySearch[2];

                $("#txt_code").val(_code);
                $("#txt_name_vi").val(_name_vi);
                $("#txt_name_en").val(_name_en);
            }

            updateSearchingConditions("divNumberRecordOnPageListObjects", setKeySearch);

            $.ajax({
                type: "POST",
                headers: { "cache-control": "no-cache" },
                url: "/quan-ly-thong-tin/hang-hoa-dich-vu-dich-vi/find-class",
                data: {
                    keysSearch: keySearch,
                    options: optionFilter
                },
                async: false,
                success: function (data) {
                    if (data != null) {
                        onResponseWhenSearching(data, "divTableObjects", findObjects);
                    }
                }
            });
            return true;
        }

        function setKeySearch() {
            window.keySearch = _code + "|" + _name_vi + "|" + _name_en;
        }

        function initOrderBySearching() {
            window.colSort = 'LastTimeUpdated';
            window.sortType = 'DESC';
        }

        function pageListOfObjects(_pagenum) {
            try {
                findObjects(_pagenum, 0);

            } catch (e) {
                console.log(e.message);
            }
        }
    </script>

    @* task function *@
    <script>

        function getViewToAddNewObject() {
            $.ajax({
                type: "POST",
                url: "/hang-hoa-dich-vu-dich-vu/get-view-to-add-class",
                headers: { "cache-control": "no-cache" },
                async: false,
                success: function (data) {
                    if (data != null) {
                        if (validateResponse(data)) {
                            $("#divPopUpObject").html(data);
                            ShowPopupDialog_Ipace('divWrapperPopUpObject', "Thêm mới người dùng", 900, 500, "txtUsernameAdd");
                        }
                    }
                    return false;
                }
            });
        }

        function getViewToEditUser(userId, username) {
            $.ajax({
                type: "POST",
                url: "/quan-ly-thong-tin/hang-hoa-dich-vu/get-view-to-edit-user",
                headers: { "cache-control": "no-cache" },
                data: { userId: userId },
                async: false,
                success: function (data) {
                    if (data != null) {
                        if (validateResponse(data)) {

                            $("#divPopUpObject").html(data);
                            ShowPopupDialog_Ipace('divWrapperPopUpObject', "Sửa hàng hóa dịch vụ: <span class='data-in-title-popup'>" + username + "</span>", 900, 500, "txtFullNameEdit");
                        }
                    }
                    return false;
                }
            });
        }

        function doDeleteUser(userId, canDelete) {
            if (canDelete > 0) {
                showError("Không thể xóa người dùng đang hoạt động.");
                return false;
            } else {
                nvsConfirm(null, "Bạn có chắc chắn muốn xóa người dùng này không?", function () {
                    $.ajax({
                        url: "/quan-ly-thong-tin/hang-hoa-dich-vu/do-delete-user",
                        type: "POST",
                        data: { userId: userId },
                        headers: { "cache-control": "no-cache" },
                        async: false,
                        success: function (data) {
                            if (data != null) {
                                if (onResponse(data)) {
                                    ClosePopupDialog('dpop-users', true);
                                    findObjects(1, 0);
                                }
                            }
                        },
                        error: function (e) {
                            console.log(e);
                        }
                    });

                });
            }
        }

        function viewDetailobject(userId, username) {
            $.ajax({
                type: "POST",
                url: "/quan-ly-thong-tin/hang-hoa-dich-vu/view-detail-class",
                headers: { "cache-control": "no-cache" },
                async: false,
                data: { userId: userId },
                success: function (data) {
                    if (data != null) {
                        if (validateResponse(data)) {
                            $("#divPopUpObject").html(data);
                            ShowPopupDialog_Ipace('divWrapperPopUpObject', "Chi tiết người dùng: <span class='data-in-title-popup'>" + username + "</span>", 900, 500);
                        }
                    }
                    return false;
                }
            });
        }

        function ClosePopUpUser() {
            CloseDivPopUp('divWrapperPopUpObject');
        }

    </script>
}
catch (Exception)
{
    // ignored
}