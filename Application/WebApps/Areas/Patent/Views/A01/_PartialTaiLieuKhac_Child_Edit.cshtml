@using ObjectInfos.ModuleTrademark
@using ObjectInfos
@using WebApps.Resources;
@model AppDocumentOthersInfo
@{
    string _id = Model.Model_Id.ToString();

    string pfileNameImg = "pfileNameImg" + _id;
    string txtTaiLieuKhacImg = "txtTaiLieuKhacImg" + _id;
    string txtMaxfileImg = "txtMaxfileImg" + _id;
    string divDocumnetNoImg = "divDocumnetNoImg" + _id;
    string btnXoa = "btnXoa" + _id;
    string btnTaiFile = "btnTaiFile" + _id;
    string btnRemoveFile = "btnRemoveFile" + _id;
    string divRemoveFileImg = "divRemoveFileImg" + _id;

    string[] _arr1 = Model.Filename.Split('/');
    string _filename1 = WebApps.Resources.Resource.FileDinhKem;
    if (_arr1.Length > 0)
