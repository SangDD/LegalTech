            </div>


            <input type="text" class="classMaxfile" value="@_filename1" id="@txtMaxfileImg" style="width: 396px !important" readonly />


            <button style="width: 30px;margin-left:1px">
                <a style="border: none;" href="@Model.Filename" target="_blank">
                    <i class="fas fa-download" style="color:blue;font-size:16px;margin-top:7px; margin-right:5px;"></i>
                </a>
            </button>

            <button id="@divRemoveFileImg" onclick="funcRemoveDocumentImg('@divDocumnetNoImg')" style="width: 30px;margin-left:1px">
                <i class="fa fa-minus-circle"></i>
