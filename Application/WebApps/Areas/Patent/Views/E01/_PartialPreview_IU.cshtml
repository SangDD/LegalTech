<style>
    #toolbox {
        display: block;
    }

    #toolbox {
        position: fixed;
        right: 10px;
        bottom: 45%;
        margin-left: -550px;
    }
</style>


<script>

    function funGetData_Preview_UI_E01(url) {
        try {
            
            var formData = new FormData();
            formData.append("pInfo.Appcode", $("#txtAppCode").val());
            formData.append("pInfo.Languague_Code", '@WebApps.CommonFunction.AppsCommon.GetCurrentLang()');
            formData.append("pInfo.View_Translate", 0);

            //Thông tin chủ đơn
            if (funcThongTinChuDon_Exp(formData, "1") != true) {
                return false;
            }

            var v_AppCode = $("#txtAppCode").val();
            
            // đại diện chủ đơn
            formData.append("pInfo.Appcode", v_AppCode);
            
            //Lấy thông tin tài liệu có trong đơn
            reponse = funGetDocumentFile(formData);
            if (reponse == false) {
                return false;
            }

            reponse = funcGetCamKetChuDon(formData);
            if (reponse == false) {
                return false;
            }
            
            $.ajax({
                url: '/lg-patentE01/ket_xuat_file_IU',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                traditional: true,
                dataType: "json",
                enctype: 'multipart/form-data',
                async: true,
                headers: { "cache-control": "no-cache" },
                beforeSend: function () {
                    CreateRollingWaitingIcon(true);
                },
                success: function (data) {
                    CreateRollingWaitingIcon(false);
                    if (data != null && data.status >= 0) {
                        return true;
                    } else {
                        return false;
                    }
                },
                error: function (e) {
                    CreateRollingWaitingIcon(false);
                    console.log(e);
                }
            });

            return true;
        } catch (e) {
            CreateRollingWaitingIcon(false);
        }
    }

    function funcPreViewApplication() {
        var preturn = funGetData_Preview_UI_E01("/lg-patentE01/ket_xuat_file_IU");
        if (preturn == true || preturn == undefined) {
            OpenPreview("/lg-patentE01/Pre-View");
        }
    }

    function funcPreViewFee() {
       
        var formData = new FormData();
        formData.append("pInfo.Appcode", $("#txtAppCode").val());
        formData.append("pInfo.Languague_Code", '@WebApps.CommonFunction.AppsCommon.GetCurrentLang()');
     
        $.ajax({
            url: "/lg-patentE01/getFee",
            type: 'POST',
            data: formData,
            dataType: "json",
            async: true,
            cache: false,
            traditional: true,
            contentType: false,
            processData: false,
            beforeSend: function () {
                CreateRollingWaitingIcon(true);
            },
            success: function (data) {
                CreateRollingWaitingIcon(false);
                if (data != null) {

                    $("#divPopUpFee").html(data.PartialTableListFees);


                    //$("#divPopUpFee").html(data);
                    ShowPopupDialog_Ipace('divWrapperPopUpFee', '@Html.Raw(WebApps.Resources.Resource.ThongTinFee)', 800, 1200);
                }
                return false;
            }
        });
    }

    function OpenPreview(url) {
        try {
            w = 1100; //độ rộng form popup
            h = 600;//chiều cao
            var left = (screen.width - w) / 2;
            var top = (screen.height - h) / 4;  // for 25% - devide by 4  |  for 33% - devide by 3
            var targetWin = window.open(url, '@Resource.TM3B_XemThongTinDon', 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=' + w + ', height=' + h + ', top=' + top + ', left=' + left);

        } catch (e) {
        }
    }
</script>