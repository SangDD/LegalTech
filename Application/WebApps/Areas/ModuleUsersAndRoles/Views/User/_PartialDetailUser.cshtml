            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Division, new { @id = "txtDivision", @disabled = "disabled", @style = "width: 200px" })
                </div>
            </div>

            <div class="div-search-title">
                <div>@WebApps.Resources.Resource.TruongBoPhan </div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Direct_Supervisor, new { @id = "txtDirect_Supervisor", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Nhóm quyền</div>
            </div>
            <div class="div-search-content">
                <div>
                    <input type="text" value="@_GroupName" disabled="disabled" style="width:200px" />
                </div>
            </div>

            <div class="div-search-title">
                <div>@WebApps.Resources.Resource.NguoiGioiThieu </div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Referee, new { @id = "Referee", @disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="divCover">
        <div class="div-search-btn" style="width:600px;margin-top: 5px;">
            @*<input type="button" class="btn-default" value="Thoát" onclick="back()" style="width: auto;" />*@
        </div>
    </div>
</div>


