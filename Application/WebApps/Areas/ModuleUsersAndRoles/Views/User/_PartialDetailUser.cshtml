@using BussinessFacade.ModuleUsersAndRoles;
@using Common.Extensions;
@using ObjectInfos;
@using BussinessFacade.ModuleMemoryData
@model ObjectInfos.UserInfo

@{

    ViewBag.Title = "Thông tin người dùng";
    Layout = "~/ViewsShared/_Layout.cshtml";

    string _GroupName = "Chưa có nhóm quyền";
    if (Model.GroupSelectedCollection.Count > 0)
    {
        int _groupId = Model.GroupSelectedCollection[0];
        foreach (GroupUserInfo item in MemoryData.GetAllGroup())
        {
            if (item.Id == _groupId)
            {
                _GroupName = item.Name;
                break;
            }
        }
    }
}

<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    .div-search-title > div {
        width: 145px;
    }
</style>

<div class="divCover">
    <div class="d-nav">
        <img src="~/Content/icons/Body-icon-home.png" /> I
        <a href="/home">Home</a>
        @*<span class="red">></span>*@
        @*<a href="/quan-tri-he-thong/quan-ly-nguoi-dung">Quản lý người dùng</a>*@

    </div>
</div>
<div class="divCover">
    <div class="classLine">
    </div>
</div>

@*Notify*@
<div class="divCover">
    @Html.Partial("~/Areas/Home/Views/Shared/_Partial_Quick_Notify.cshtml")
</div>


<div class="d-main">
    <div class="divCover">
        <div class="classTitle">
            <div class="div-title-content"> THÔNG TIN NGƯỜI DÙNG</div>
        </div>
    </div>

    <div class="divCover">
        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Tên đăng nhập<i class="redspan"></i></div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Username, new { @id = "txtUsername", @disabled = "disabled", @style = "width: 200px" })
                </div>
            </div>

            <div class="div-search-title">
                <div>Họ tên<i class="redspan"></i></div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.FullName, new { @id = "txtFullName", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Địa chỉ<i class="redspan"></i></div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Address, new { @id = "txtAddress", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Ngày sinh</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.DateOfBirth, new
                    {
                        @id = "DateOfBirth",
                        @Value = Model.DateOfBirth == DateTime.MinValue ? "" : Model.DateOfBirth.ToString("dd/MM/yyyy"), @disabled = "disabled", @style = "width: 200px"
                    })
                </div>
            </div>


            <div class="div-search-title">
                <div>Giới tính</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.SexDisplayName, new { @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Số điện thoại<i class="redspan"></i></div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Phone, new { @style = "width: 200px", @disabled = "disabled" })
                </div>
            </div>

            <div class="div-search-title">
                <div>Fax </div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Fax, new { @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Email<i class="redspan"></i></div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @maxlength = "200", @style = "width: 200px", @disabled = "disabled" })
                </div>
            </div>
            <div class="div-search-title">
                <div>Face </div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Face_Link, new { @maxlength = "200", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Linkedin</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Linkedin_Link, new { @maxlength = "200", @style = "width: 200px", @disabled = "disabled" })
                </div>
            </div>
            <div class="div-search-title">
                <div>Wechat</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Wechat_Link, new { @maxlength = "200", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Other link</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Other_Link, new { @id = "txtOther_Link", @maxlength = "200", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Quốc tịch</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Country_Name, new { @id = "txtCountry_Name", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Loại người dùng<i class="redspan"></i></div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Type_Name, new { @style = "width: 200px", @disabled = "disabled" })
                </div>
            </div>
            <div class="div-search-title">
                <div>Trạng thái </div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.StatusDisplayName, new { @disabled = "disabled" })
                </div>
            </div>
        </div>

        @if (Model.Type == Convert.ToInt16(Common.CommonData.CommonEnums.UserType.Customer))
        {
            <div class="div-search-ad" id="clsCustomer">
                <div class="div-search-title">
                    <div>Tên công ty <i class="redspan"></i></div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Company_Name, new { @maxlength = "500", @style = "width: 200px", @disabled = "disabled" })
                    </div>
                </div>

                <div class="div-search-title">
                    <div>Ngành ngề chính  <i class="redspan"></i></div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Main_Business, new { @maxlength = "500", @disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="div-search-ad" id="clsCustomer1">
                <div class="div-search-title">
                    <div>Người quản lý</div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Copyto, new { @maxlength = "200", @style = "width: 200px", @disabled = "disabled" })
                    </div>
                </div>

                <div class="div-search-title">
                    <div>Chức vụ </div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Title, new { @maxlength = "500", @disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="div-search-ad" id="clsCustomer3">
                <div class="div-search-title">
                    <div>Mã đại diện</div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Customer_Code, new { @maxlength = "200", @disabled = "disabled", @style = "width: 200px" })
                    </div>
                </div>

                <div class="div-search-title">
                    <div>Rating </div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Rating, new { @disabled = "disabled", @Value = Model.Rating == 0 ? "" : Model.Rating.ToString("#,##0.##") })
                    </div>
                </div>
            </div>

            <div class="div-search-ad" id="clsCustomer3">
                <div class="div-search-title">
                    <div>Contact Person </div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Contact_Person, new { @maxlength = "200", @disabled = "disabled", @style = "width: 200px" })
                    </div>
                </div>

                <div class="div-search-title">
                    <div>Tel/email of contact person </div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Tel_Contact_Person, new { @disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="div-search-ad" id="clsCustomer2">
                <div class="div-search-title">
                    <div>Lý do dùng </div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Reason_Select_Name, new { @disabled = "disabled", @style = "width: 200px" })
                    </div>
                </div>

                <div class="div-search-title">
                    <div>Chính sách giá đặc biệt </div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Request_Credit_Name, new { @disabled = "disabled" })
                    </div>
                </div>
            </div>

            if (Model.Is_Agent == 1)
            {
                <div class="div-search-ad">
                    <div class="div-search-title">
                        <div>Người đại diện SHCN </div>
                    </div>
                    <div class="div-search-content">
                        <div>
                            @Html.TextBoxFor(m => m.Agent_Representative, new { @disabled = "disabled", @style = "width: 200px" })
                        </div>
                    </div>

                    <div class="div-search-title">
                        <div>Thẻ hành nghề </div>
                    </div>
                    <div class="div-search-content">
                        <div>
                            @Html.TextBoxFor(m => m.License_Agent, new { @disabled = "disabled" })
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="div-search-ad">
                    <div class="div-search-title">
                        <div>Người đại diện theo pháp luật </div>
                    </div>
                    <div class="div-search-content">
                        <div>
                            @Html.TextBoxFor(m => m.Agent_Representative, new { @disabled = "disabled", @style = "width: 200px" })
                        </div>
                    </div>

                    <div class="div-search-title">
                        <div>Giấy uỷ quyền (đính kèm) </div>
                    </div>
                    <div class="div-search-content">
                        <div>
                            @Html.TextBoxFor(m => m.License_Agent, new { @disabled = "disabled" })
                        </div>
                    </div>
                </div>
            }
        }
        else if (Model.Type == Convert.ToInt16(Common.CommonData.CommonEnums.UserType.Lawer))
        {
            <div class="div-search-ad" id="clsLawer">
                <div class="div-search-title">
                    <div>Loại luật sư <i class="redspan"></i></div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Lawer_Type_Name, new { @disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="div-search-ad" id="clsLawer">
                <div class="div-search-title">
                    <div>Số tiền / 1 giờ (VNĐ)<i class="redspan"></i></div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Hourly_Rate, new { @disabled = "disabled", @Value = Model.Hourly_Rate == 0 ? "" : Model.Hourly_Rate.ToString("#,##0.##"), @style = "width: 200px" })
                    </div>
                </div>

                <div class="div-search-title">
                    <div>Số tiền / 1 giờ (USD)<i class="redspan"></i></div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Hourly_Rate_USD, new { @disabled = "disabled", @Value = Model.Hourly_Rate_USD == 0 ? "" : Model.Hourly_Rate_USD.ToString("#,##0.##") })
                    </div>
                </div>
            </div>
        }

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Nhóm quyền</div>
            </div>
            <div class="div-search-content">
                <div>
                    <input type="text" value="@_GroupName" disabled="disabled" />
                </div>
            </div>
        </div>
    </div>

    <div class="divCover">
        <div class="div-search-btn" style="width:600px;margin-top: 5px;">
            @*<input type="button" class="btn-default" value="Thoát" onclick="back()" style="width: auto;" />*@
        </div>
    </div>
</div>


<script>
    function back() {
        var url = "/quan-tri-he-thong/quan-ly-nguoi-dung/";
        window.location.href = url;
    }
</script>