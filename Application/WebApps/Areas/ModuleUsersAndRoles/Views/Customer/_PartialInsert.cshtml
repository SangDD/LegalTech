<script>
    var usernameAdd = '',
        fullNameAdd = '',
        passwordAdd = '',
        rePasswordAdd = '',
        dateOfBirthAdd = '',
        sexAdd = '',
        emailAdd = '',
        phoneAdd = '',
        statusAdd = '',
        typeAdd = '',
        GroupIdAdd = '';
    $(document).ready(function () {
        $.datetimepicker.setLocale('vi');
        $('.datetimepicker').datetimepicker({
            timepicker: false,
            format: 'd/m/Y',
            //formatTime: 'H:i',
            formatDate: 'd/m/Y',
            mask: '39/19/9999',
            validateOnBlur: false,
            scrollInput: false
        });

        $('#cboCountry').multipleSelect({
            filter: true,
            single: true,
            isdatastring: false,
            maxHeight: 150,
            placeholder: "-- @WebApps.Resources.Resource.ChonQuocTich --"
        });
    });

    function onChooseAgent() {
        try {
            var _IsAgent = $('#ckbAgent').is(":checked");
            if (_IsAgent == true) {

                var _divAgent_Representative = document.getElementById("divAgent_Representative");
                _divAgent_Representative.innerHTML = "Người đại diện SHCN";

                var _divLicense_Agent = document.getElementById("divLicense_Agent");
                _divLicense_Agent.innerHTML = "Thẻ hành nghề";
            } else {
                var _divAgent_Representative = document.getElementById("divAgent_Representative");
                _divAgent_Representative.innerHTML = "Người đại diện theo PL";

                var _divLicense_Agent = document.getElementById("divLicense_Agent");
                _divLicense_Agent.innerHTML = "Giấy uỷ quyền";
            }

        } catch (e) {
            console.log(e);
        }
    }

    function collectDataToAddNewUser(formData) {
        formData.append('userInfo.Username', usernameAdd);
        formData.append('userInfo.FullName', fullNameAdd);
        formData.append('userInfo.Address', $("#txtAddress").val());
        formData.append('userInfo.Password', passwordAdd);
        formData.append('userInfo.DateOfBirth', dateOfBirthAdd);
        formData.append('userInfo.Sex', sexAdd);
        formData.append('userInfo.Email', emailAdd);
        formData.append('userInfo.Phone', phoneAdd);
        formData.append('userInfo.Fax', $("#txtFaxAdd").val());
        formData.append('userInfo.Type', typeAdd);
        formData.append('userInfo.Status', statusAdd);

        formData.append('userInfo.Country', $("#cboCountry").val());
        formData.append('userInfo.Face_Link', $("#txtface_link").val());
        formData.append('userInfo.Linkedin_Link', $("#txtlinkedin").val());
        formData.append('userInfo.Wechat_Link', $("#txtwechat_link").val());
        formData.append('userInfo.Other_Link', $("#txtOther_Link").val());

        formData.append('userInfo.Company_Name', $("#txtcompany_name").val());
        formData.append('userInfo.Main_Business', $("#txtmain_business").val());
        formData.append('userInfo.Title', $("#txttitle").val());
        formData.append('userInfo.Copyto', $("#txtcopyto").val());

        formData.append('userInfo.Reason_Select', $("#cboReasonSelect").val());
        formData.append('userInfo.Request_Credit', $("#cboRequestCredit").val());
        formData.append('userInfo.Customer_Code', $("#txtCustomer_Code").val());
        formData.append('userInfo.Contact_Person', $("#txtContact_Person").val());

        formData.append('userInfo.Tel_Contact_Person', $("#txtTel_Contact_Person").val());
        formData.append('userInfo.Agent_Representative', $("#txtAgent_Representative").val());
        formData.append('userInfo.License_Agent', $("#txtLicense_Agent").val());
        formData.append('userInfo.Referee', $("#cboReferee").val());

        var _IsAgent = $('#ckbAgent').is(":checked");
        if (_IsAgent == true) {
            formData.append('userInfo.Is_Agent', 1);
        } else {
            formData.append('userInfo.Is_Agent', 0);
        }


        formData.append('GroupId', GroupIdAdd);
    }

    function back() {
        var url = "/customer/quan-ly-customer/";
        window.location.href = url;
    }

    function doAddNewUser() {
        if (validateFormAddNewUser()) {
            var formData = new FormData();
            collectDataToAddNewUser(formData);
            $.ajax({
                url: '/customer/quan-ly-customer/do-add-customer',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                traditional: true,
                async: true,
                headers: { "cache-control": "no-cache" },
                beforeSend: function () {
                    CreateRollingWaitingIcon(true);
                },
                success: function (data) {
                    if (data != null) {
                        CreateRollingWaitingIcon(false);
                        if (onResponse(data)) {
                            var url = "/customer/quan-ly-customer/";
                            window.location.href = url;
                        }
                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }

    function validateFormAddNewUser() {
        usernameAdd = $('#txtUsernameAdd').val().trim();
        fullNameAdd = $('#txtFullNameAdd').val().trim();
        passwordAdd = $('#txtPasswordAdd').val();
        rePasswordAdd = $('#txtRePasswordAdd').val();
        dateOfBirthAdd = $('#txtDateOfBirthAdd').val().trim();
        sexAdd = $('#cboSexAdd').val();
        emailAdd = $('#txtEmailAdd').val().trim();
        phoneAdd = $('#txtPhoneAdd').val().trim();
        typeAdd = $('#cboTypeAdd').val();
        statusAdd = $('#cboStatusAdd').val();
        GroupIdAdd = $('#cboGroupUser').val();
        if (usernameAdd === "") {
            jError("Tên đăng nhập không được để trống!", "lỗi", function () {
                $('#txtUsernameAdd').focus();
            });
            return false;
        }

        if (fullNameAdd === "") {
            jError("Họ tên không được để trống!", "lỗi", function () {
                $('#txtFullNameAdd').focus();
            });
            return false;
        }

        if (passwordAdd === "") {
            jError("Nật khẩu không được để trống!", "lỗi", function () {
                $('#txtPasswordAdd').focus();
            });
            return false;
        }
        if (rePasswordAdd === "") {
            jError("Xác nhận mật khẩu không được để trống!", "lỗi", function () {
                $('#txtRePasswordAdd').focus();
            });
            return false;
        }
        if (passwordAdd.length < 6) {
            jError("Mật khẩu phải chứa từ 6 đến 64 ký tự!", "lỗi", function () {
                $('#txtRePasswordAdd').focus();
            });
            return false;
        } else if (passwordAdd !== rePasswordAdd) {
            jError("Mật khẩu và xác nhận mật khẩu không giống nhau!", "lỗi", function () {
                $('#txtRePasswordAdd').focus();
                $("#txtRePasswordAdd").select();
            });
            return false;
        }

        if ($("#txtAddress").val() === "") {
            jError("Địa chỉ không được để trống!", "lỗi", function () {
                $('#txtAddress').val('');
                $('#txtAddress').focus();
            });
            return false;
        }

        if (dateOfBirthAdd === "" || dateOfBirthAdd === window.maskDateTime_N0) {
            jError("Ngày sinh không được để trống", "lỗi", function () {
                $('#txtDateOfBirthAdd').focus();
            });
            return false;
        } else if (isValidDate_N0(dateOfBirthAdd) === false) {
            jError("Ngày sinh không đúng định dạng (dd/mm/yyyy)!", "lỗi", function () {
                $('#txtDateOfBirthAdd').focus();
            });
            return false;
        }

        if (phoneAdd === "") {
            jError("Điện thoại không được để trống!", "lỗi", function () {
                $('#txtPhoneAdd').val('');
                $('#txtPhoneAdd').focus();
            });
            return false;
        }

        if (emailAdd === "") {
            jError("Email không được để trống!", "lỗi", function () {
                $('#txtEmailAdd').focus();
            });
            return false;
        } else if (!IsvalidEmail(emailAdd)) {
            jError("Email không đúng định dạng!", "lỗi", function () {
                $('#txtEmailAdd').focus();
            });
            return false;
        }

        var _cboCountry = $("#cboCountry").val();
        if (_cboCountry == null) {
            jError("Quốc tịch không được bỏ trống!", "lỗi", function () {
                $('#cboCountry').multipleSelect('focus');
            });
            return false;
        }

        if (statusAdd == null) {
            jError("Trạng thái không được bỏ trống!", "lỗi", function () {
                $('#cboStatusAdd').focus();
            });
            return false;
        }


        var _txtcompany_name = $("#txtcompany_name").val();
        if (_txtcompany_name == null || _txtcompany_name == "") {
            jError("Tên công ty khách hàng không được bỏ trống!", "lỗi", function () {
                $('#_txtcompany_name').focus();
            });
            return false;
        }

        var _txtmain_business = $("#txtmain_business").val();
        if (txtmain_business == null || txtmain_business == "") {
            jError("Ngành ngề chín không được bỏ trống!", "lỗi", function () {
                $('#txtmain_business').focus();
            });
            return false;
        }

        if (GroupIdAdd == "-1") {
            jError("Loại người dùng không được để trống!", "lỗi", function () {
                $("#cboGroupUser").focus();
            });
            return false;
        }

        return true;
    }
</script>
