                //}
                //else if (orderby.toLocaleUpperCase().indexOf("AGENCIE_NAME") >= 0) {
                //    orderby = "NLSSORT(UPPER(" + orderby + "), 'NLS_SORT=vietnamese')";
                //}
                $.ajax({
                    type: "POST",
                    headers: { "cache-control": "no-cache" },
