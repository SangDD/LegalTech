                }

                var orderby = $("#colSortedBulletin").val();
                var orderType = $("#SortTypeBulletin").val();
                //if (orderby.indexOf("NUMBER_TEXT") >= 0) {
                //    orderby = "NLSSORT(UPPER(" + orderby + "), 'NLS_SORT=vietnamese')";
                //}
