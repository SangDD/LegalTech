@using ObjectInfos;
@using BussinessFacade;
@using WebApps.Session
@{
    B_TodoNotify_Info p_todonotify = new B_TodoNotify_Info();
    if (ViewBag.NotifyInfo != null)
    {
        p_todonotify = ViewBag.NotifyInfo;
    }
    else
    {
        B_Todos_BL _obj_bl = new B_Todos_BL();
        p_todonotify = _obj_bl.GET_NOTIFY(SessionData.CurrentUser.Username);

        if (p_todonotify == null)
        {
            p_todonotify = new B_TodoNotify_Info();
        }
    }
}
<style>
    .notify_cover {
        width: calc( 85% );
        float: left;
        margin-top: 10px;
    }

    .notify_todo {
        width: 30%;
        float: left;
        height: 20px;
        padding: 20px 0px 20px 20px;
        background-color: #ffffff;
        cursor: pointer;
    }

    .notify_end {
        float: left;
        height: 20px;
        padding: 20px 0px 20px 20px;
        background-color: #ffffff;
        cursor: pointer;
    }

    .notify_number {
        float: left;
        font-size: 20px;
        font-weight: bold;
    }

    .notify_text {
        float: left;
        font-size: 14px;
        font-weight: bold;
        margin-left: 15px;
    }

    .border4todo {
        border-left: 8px solid #00ff21;
    }

    .border4Request {
        border-left: 8px solid #4800ff;
        margin-left: 5px;
    }

    .border4Remind {
        border-left: 8px solid #ff0000;
        margin-left: 5px;
        width: calc(100% - 60% - 94px)
    }

    .div_showchoosetab {
        width: 100%;
        float: left;
        margin-top: -3px;
        height: 14px;
    }

        .div_showchoosetab div {
            width: 33.33%;
            text-align: center;
            float: left;
        }

            .div_showchoosetab div img {
                margin-top: -3px;
            }

    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto;
        width: 100%;
        height: 50px;
    }

    .grid-item {
        text-align: center;
       
    }
</style>

<div class="grid-container notify_cover">
    <div class="grid-item" style="padding-right: 28px;">
        <div class="notify_todo border4todo" style="width:100%" onclick="funchooseNotifi('div_todocorver')">
            <span class="notify_number">@p_todonotify.NUMBER_TODO</span>
            <span class="notify_text">Việc cần làm</span>
        </div>

    </div>
    <div class="grid-item" style="padding-right: 38px;">
        <div class="notify_todo border4Request" style="width:100%" onclick="funchooseNotifi('div_Ordercorver')">
            <span class="notify_number">@p_todonotify.NUMBER_REQUEST</span>
            <span class="notify_text">Yêu cầu</span>
        </div>
    </div>
    <div class="grid-item" style="background:#ffffff">
        <div class="notify_end border4Remind" onclick="funchooseNotifi('div_remindcorver')">
            <span class="notify_number">@p_todonotify.NUMBER_REMIND</span>
            <span class="notify_text">Remind  </span>
        </div>
    </div>
</div>

