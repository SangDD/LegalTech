@using Common.CommonData
@using WebApps.CommonFunction;
@using BussinessFacade.ModuleMemoryData
@using WebApps.Resources;
@using BussinessFacade.ModuleMemoryData
@using ObjectInfos
@using WebApps.Resources;
@{
    ViewBag.Title = "Register";
    Layout = "~/ViewsShared/_Layout.cshtml";

    string _Country = "";
    if (ViewBag.Country != null)
    {
        _Country = (string)ViewBag.App_No;
    }

    List<FunctionInfo> functionInfos = new List<FunctionInfo>();
    if (ViewBag.Lst_Function != null)
    {
        functionInfos = (List<FunctionInfo>)ViewBag.Lst_Function;
    }
    var groupsFunc = functionInfos.GroupBy(item => item.App_Type);

    string _url = "/application/register/" + _Country;

    string language = WebApps.CommonFunction.AppsCommon.GetCurrentLang();
}
<style>
    #list2 {
    }

        #list2 ol {
            font-style: italic;
            font-family: Georgia, Times, serif;
            font-size: 24px;
            color: #bfe1f1;
        }

            #list2 ol li {
            }

                #list2 ol li p {
                    padding: 8px;
                    font-style: normal;
                    font-family: Arial;
                    font-size: 13px;
                    color: #eee;
                    border-left: 1px solid #999;
                }

                    #list2 ol li p em {
                        display: block;
                    }

    .div_form {
        /*width: 50%;*/
        float: left;
    }

    .grid-container {
        display: grid;
        grid-template-columns: 50% 50%;
        /*background-color: #2196F3;*/
        padding: 1px;
        padding: 1px;
        margin-right: 10px;
    }

    .grid-item {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgb(187, 231, 255);
        border-radius: 4px;
        /* padding: 20px; */
        font-size: 30px;
        text-align: center;
        margin-bottom: 10px;
        margin-left: 10px;
    }

    .hederlist {
        /*border: 1px solid;
        border-radius: 4px;*/
        text-align: left;
        height: 100%;
        overflow: hidden;
    }

    .header-type {
        width: 100%;
        padding: 5px 10px;
        font-weight: bold;
        margin-top: -1px;
    }

    .item_list {
        padding: 5px 0;
        border-bottom: 1px dashed #e4e0d8;
