@using ObjectInfos;
@using BussinessFacade;
@model Timesheet_Info

<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    .div-search-title > div {
        width: 120px;
    }
</style>

<div class="" style="padding:5px 38px">
    <div class="divCover divCover_popup">
        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Mã đơn<i class="redspan">(*)</i></div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.App_Code, new { @id = "txtApp_Code", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Loại đơn</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.App_Name, new { @id = "txtApp_Name", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Timesheet name</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Name, new { @id = "txtName", @disabled = "disabled", @style = "width: 200px" })
                </div>
            </div>


            <div class="div-search-title">
                <div>Luật sư</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Lawer_Name, new { @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Trạng thái</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Status_Name, new { @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Ngày</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Time_Date, new
                    {
                        @id = "DateOfBirth",
                        @Value = Model.Time_Date == DateTime.MinValue ? "" : Model.Time_Date.ToString("dd/MM/yyyy"), @disabled = "disabled", @style = "width: 200px"
                    })
                </div>
            </div>
            <div class="div-search-title">
                <div>Giờ </div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Hours, new { @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Ghi chú</div>
            </div>
            <div class="div-search-content">
                <div>
                    @Html.TextBoxFor(m => m.Notes, new { @disabled = "disabled" })
                </div>
            </div>
        </div>

        @if (Model.Status == (int)Common.CommonData.CommonEnums.TimeSheet_Status.Reject)
        {
            <div class="div-search-ad">
                <div class="div-search-title">
                    <div>Lý do từ chối</div>
                </div>
                <div class="div-search-content">
                    <div>
                        @Html.TextBoxFor(m => m.Reject_Reason, new { @id = "txtReject_Reason", @disabled = "disabled" })
                    </div>
                </div>
            </div>
        }

    </div>

    <div class="form-group">
        <div class="form-group-bottom">
            <input type="button" class="btn-default" value="Thoát" onclick="ClosePopUpTimeSheet()" style="width: auto;" />
        </div>
    </div>
</div>
