@using System
@using System.Data
@model string
    @{
        string txtTenDayDu = Model + "_txtTenDayDu";
        string txtDiaChi = Model + "_txtDiaChi";
        string txtDienThoai = Model + "_txtDienThoai";
        string txtFax = Model + "_txtFax";
        string txtEmail = Model + "_txtEmail";

    }
    <div class="div_full_100_area">
        <div class="class_full_div_input">
            <div class="class_block_title"><label>Tên đầy đủ:</label> </div>
            <div class="class_block_title_control">
                <input type="text" placeholder="@txtTenDayDu" id="@txtTenDayDu" />
            </div>
        </div>
        <div class="class_full_div_input">
            <div class="class_block_title"><label>Địa chỉ:</label> </div>
            <div class="class_block_title_control">
                <input type="text" placeholder="@txtDiaChi" id="@txtDiaChi" />
            </div>
        </div>
        <div class="class_full_div_input">
            <div class="class_flex_30_first">
                <div class="class_block_title" style="width:89px"><label>Điện thoại:</label> </div>
                <div class="class_block_phone class_flex_grow">
                    <input type="text" placeholder="@txtDienThoai" maxlength="50" id="@txtDienThoai" />
                </div>
            </div>
            <div class="class_flex_30">
                <div class="class_block_title"><label>Fax:</label> </div>
                <div class="class_block_fax class_flex_grow">
                    <input type="text" placeholder="@txtFax" maxlength="50" id="@txtFax" />
                </div>
            </div>
            <div class="class_flex_40">
                <div class="class_block_title"><label>Email:</label></div>
                <div class="class_block_email class_flex_grow">
                    <input type="text" placeholder="@txtEmail" maxlength="50" id="@txtEmail" />
                </div>
            </div>
        </div>
    </div>


    <script>
    //Lấy thông tin chủ đơn add vào formData
    function funcThongTinChuDonKhac(formData, PreID) {
        try {
            var txtTenDayDu = $("#" + PreID + "_txtTenDayDu").val();
            if (txtTenDayDu === "") {
                $("#" + PreID + "_txtTenDayDu").focus().val('');
                showError('Tên không được để trống!');
                return false;
            }
            var txtDiaChi = $("#" + PreID + "_txtDiaChi").val();
            if (txtDiaChi === "") {
                $("#" + PreID + "_txtDiaChi").focus().val('');
                showError('Địa chỉ không được để trống!');
                return false;
            }
            var txtDienThoai = $("#" + PreID + "_txtDienThoai").val();
            var txtFax = $("#" + PreID + "_txtFax").val();
            var txtEmail = $("#" + PreID + "_txtEmail").val();
            if (txtEmail != "") {
                if (!IsvalidEmail(txtEmail)) {
                    $("#" + PreID + "_txtEmail").focus();
                    showError('Email không đúng định dạng!');
                    return false;
                }
            }
            //Chủ đơn
            if (PreID == "10") {
                formData.append("pDetail.Cdk_Name_2", txtTenDayDu);
                formData.append("pDetail.Cdk_Address_2", txtDiaChi);
                formData.append("pDetail.Cdk_Phone_2", txtDienThoai);
                formData.append("pDetail.Cdk_Fax_2", txtFax);
                formData.append("pDetail.Cdk_Email_2", txtEmail);
            } else if (PreID == "11") {
                formData.append("pDetail.Cdk_Name_3", txtTenDayDu);
                formData.append("pDetail.Cdk_Address_3", txtDiaChi);
                formData.append("pDetail.Cdk_Phone_3", txtDienThoai);
                formData.append("pDetail.Cdk_Fax_3", txtFax);
                formData.append("pDetail.Cdk_Email_3", txtEmail);
            }
            else if (PreID == "12") {
                formData.append("pDetail.Cdk_Name_4", txtTenDayDu);
                formData.append("pDetail.Cdk_Address_4", txtDiaChi);
                formData.append("pDetail.Cdk_Phone_4", txtDienThoai);
                formData.append("pDetail.Cdk_Fax_4", txtFax);
                formData.append("pDetail.Cdk_Email_4", txtEmail);
            }
            return true;
        } catch (e) {
            return false;
        }
    }
    </script>